<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/container_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:orientation="vertical"


        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_cadastrar"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/asap_bold"

            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_user"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="3sp"
                android:fontFamily="@font/asap_bold"
                />

            <EditText
                android:id="@+id/inputNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_users"
                android:background="@drawable/container_input"
                android:hint="@string/hint_usuario_name"
                android:textColorHint="@color/color_input"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="24sp"
                android:drawablePadding="10sp"
                android:fontFamily="@font/asap_bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"


            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_email"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/asap_bold"
                />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:drawableStart="@drawable/ic_email"
                android:background="@drawable/container_input"
                android:hint="@string/hint_email"
                android:textColorHint="@color/color_input"
                android:textColor="@color/black"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:drawablePadding="10sp"
                android:fontFamily="@font/asap_bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"


            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_password"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="@font/asap_bold"
                />

            <EditText
                android:id="@+id/inputSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:drawableStart="@drawable/ic_password"
                android:background="@drawable/container_input"
                android:hint="@string/hint_password"
                android:textColorHint="@color/color_input"
                android:textColor="@color/black"
                android:padding="10dp"
                android:inputType="numberPassword"
                android:drawablePadding="10sp"
                android:fontFamily="@font/asap_bold"/>


        </LinearLayout>



        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_button"
            android:text="@string/button_cadastrar"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="35dp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/asap_bold"


            />

        <TextView
            android:id="@+id/JaPossuiCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:elegantTextHeight="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/button_jaPossuiCadastro"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"


            />


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>